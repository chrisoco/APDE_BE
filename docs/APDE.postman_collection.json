		{
			"name": "Cookie Based",
			"item": [
				{
					"name": "Generate CSRF Cookie",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const xsrfToken = pm.cookies.get('XSRF-TOKEN');",
									"if (xsrfToken) {",
									"    pm.collectionVariables.set(\"X-XSRF-TOKEN\", decodeURIComponent(xsrfToken));",
									"}",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
